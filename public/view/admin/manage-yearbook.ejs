
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SEAIT AMS</title>

  <%- include('../sub/head-admin.ejs') %>
<!-- header -->
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
          
    <div class="preloader flex-column justify-content-center align-items-center">
      <img class="animation__shake" src="../img/logo.png" alt="seait" height="60" width="60">
      <h5>Setting up things for you ...</h5>
    </div>
    
            <h2 class="text-center ">Manage yearbooks</h2>
         
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">List of yearbooks </h3>
                    <div class="card-tools">

                      <button type="button" class="btn btn-tool"  title="Add">
                          <a href="" id="btn_add" class="text-primary">
                              <i class="fas fa-plus"></i>
                          </a>
                      </button>
                    </div>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                      <thead>
                      <tr>
                        <th>Year Graduated</th>
                        <th>Course</th>
                        <!-- <th>Username/Email</th> -->
                        <th>Action</th>
                      </tr>
                      </thead>
                      <tbody>

                        <% yearbooks.forEach(function(e) { %>
                          <tr>
                            <td><%= e.year_graduated %></td>
                            <td><%= e.course_name %></td>
                            <td class="text-center">
                             
                                <a href="/manage-yearbook-details/<%= e.yearbook_id %>"" class="text-info update"><i class="fas fa-eye"></i></a>
                              </td>
                              
                          </tr>
                        <% }); %>
                     
                      
                      </tbody>
                    </table>
                  </div>
                  <!-- /.card-body -->
                </div>
              </div>
            </div>

         
        </div>
    </section>
  </div>
<!-- footer -->

<div class="modal fade" id="modal-add">
  <div class="modal-dialog modal-dialog-centered modal-sm">
    <div class="modal-content">
          <div class="modal-header">
        <h4 class="modal-title">Add yearbook</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="" id="add">
          <div class="form-group">
            <label>Year</label>
                  <select class="select2" required name="year" placeholder="type ..." style="width: 100%;">
                    <option value="">Year Graduated ...</option>
                    <% years.forEach(function(e) { %>
                      <option value="<%= e %>"><%= e %></option>
                    <% }); %>
                  </select>
        </div>
          <div class="form-group">
            <label>Course</label>
                  <select class="select2" required name="course" placeholder="type ..." style="width: 100%;">
                      <option value="">Course ...</option>
                      <% courses.forEach(function(e) { %>
                        <option value="<%= e.course_id %>"><%= e.course_name %></option>
                      <% }); %>
      
                  </select>
        </div>
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Submit</button>
        </form>
        
        </div>
      </div>
        <!-- <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div> -->
    </div>
    <!-- /.modal-content -->
  </div>



<%- include('../sub/foot-admin.ejs') %>
<!-- codde -->
<script>

   $("#btn_add").click(function (e) { 
     e.preventDefault();
     $('#modal-add').modal("toggle")
   });


   $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "responsive": true,
    });

    var user_id ;

    $(document).on('click', 'a.update', function (e) {
      e.preventDefault();
      let id = $(this).siblings('#id').val();
      // alert(`update : ${id}`) 
       console.log(`update : ${id}`);

      $.getJSON(`/users/${id}`,
        function (d, textStatus, jqXHR) {
          $('input[name="user_id"]').val(d.alumni_id);
          $('input[name="fname"]').val(d.fname);
          $('input[name="mname"]').val(d.mname);
          $('input[name="lname"]').val(d.lname);
          $('input[name="bday"]').val(d.bday);
          $('input[name="phone"]').val(d.phone_num);
          $('select[name="year"]').val(d.year_graduated);
          $('select[name="course"]').val(d.course_id);
          $('select[name="gender"]').val(d.gender);
          $('select[name="job_status"]').val(d.job_status);
          
        }
      );



      $('#modal-update').modal('toggle')
    
    });

    $("#add").submit(function (e) { 
      e.preventDefault();
      const data = Object.fromEntries(new FormData(e.target).entries());
       console.log(data)

       Swal.fire({
      title: 'Do you want to save the changes?',
      // showDenyButton: true,
      showCancelButton: true,
      confirmButtonText: 'Save',
      // denyButtonText: `Don't save`,
    }).then((result) => {
      if (result.isConfirmed) {
          
           $.ajax({
             type: "POST",
             url: "/manage-yearbooks",
            //  data: form.serialize(),
             data: data,
             dataType: "json",
             success: function (res) {

              if (res.success) {
                console.log(res);
              //  document.getElementById("register").reset();
               $('#modal-add').modal("toggle")
               Toast.fire({
                   icon: 'success',
                   title: 'Successfully save'
                 })
                 setTimeout(function () {
                    location.reload(true)
                }, 1000);
              } else {
                Toast.fire({
                   icon: 'error',
                   title: 'Something went wrong'
                 })
              }
            

             }//res
           });
         
       
       
          } 
      })//Swal

    });

    $(document).on('click', 'a.remove', function (e) {
      e.preventDefault();
      let id = $(this).siblings('#id').val();
      // alert(`remove : ${id}`)

      Swal.fire({
      title: 'Do you want to remove?',
      // showDenyButton: true,
      showCancelButton: true,
      confirmButtonText: 'Save',
      // denyButtonText: `Don't save`,
    }).then((result) => {
      if (result.isConfirmed) {
          
           $.ajax({
             type: "DELETE",
             url: "/users/"+ id,
            //  data: form.serialize(),
             dataType: "json",
             success: function (res) {

              if (res.success) {
                console.log(res);
              //  document.getElementById("register").reset();
              //  $('#modal-update').modal("toggle")
               Toast.fire({
                   icon: 'success',
                   title: 'Successfully removed'
                 })
                 setTimeout(function () {
                    location.reload(true)
                }, 1000);
              } else {
                Toast.fire({
                   icon: 'error',
                   title: 'Something went wrong'
                 })
              }
            

             }//res
           });
         
       
       
          } 
      })//Swal


    });

</script>
</body>
</html>